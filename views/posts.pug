doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    title 体重記録簿
  body
    h1 体重記録簿 !{user_name}
    a(href='/logout') ログアウト
    form(method="post" action="/posts")
      table
        tr
          td !{today}
          td
            textarea(name="weight" cols=10 rows=1)
          td
            button(type="submit") 登録
    h1 記録一覧
    table
      tr
        td(style="cursor:pointer;text-align:left" id="prev-week") <
        each item in data
          td(style="cursor: pointer; text-align: center;") 
            | !{item.date}<br>
            | !{item.day}
        td(style="cursor:pointer;text-align:right" id="next-week") >
      tr
        td
        each item in data
          td(style="text-align:center") !{item.weight}
        td
